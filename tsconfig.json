{
  "compilerOptions": {
"module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmitOnError": false,
    "skipLibCheck": true
  },
  "include": ["src", "src/drizzle.config.ts"],
  "exclude": ["node_modules"]
}
